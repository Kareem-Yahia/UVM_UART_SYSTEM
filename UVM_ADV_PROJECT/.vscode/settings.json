{
    // =========================
    // Formatting and Linting
    // =========================
    "verible.formatting.enable": true,
    "verible.linting.enable": true,
    "[systemverilog]": {
        "editor.defaultFormatter": "chipsalliance.verible",
        "editor.formatOnSave": false 
    },
    "[verilog]": {
        "editor.defaultFormatter": "chipsalliance.verible",
        "editor.formatOnSave": false
    },
    "verilog.linting.linter": "verilator",
    "verilog.linting.verilator.arguments": "-sv",

    // =========================
    // Disable old Verilog IntelliSense
    // =========================
    "verilog.intellisense.enable": false,
    "verilog.ctags.enable": false,
    "verilog.hover.definition": false,

    // =========================
    // File associations
    // =========================
    "files.associations": {
        "*.sv": "systemverilog",
        "*.svh": "systemverilog"
    },

    // =========================
    // Optional: exclude folders from VS Code search/index
    // =========================
    "verilog.intellisense.excludeFiles": [
        "**/work/**",
        "**/.git/**"
    ],

    // =========================
    // SVLS will automatically index all files under the workspace root
    // Make sure you have svls.toml in your project root:
    // [project]
    // sources = [
    //   "**/*.sv",
    //   "**/*.svh"
    // ]
    // =========================

    // =========================
    // Misc VS Code editor settings (optional)
    // =========================
    "editor.fontSize": 15,
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false ,
    "svls.includeIndexing": ["**/*.sv", "**/*.svh"],
    "svls.launchConfiguration": ".svls.toml",
    "svls.useBuiltinParser": true ,
    "verilog.ctags.enabled": true,
    "ctags-companion.command": "ctags -R --fields=+nKz --langmap=SystemVerilog:+.v -R rtl /opt/uvm-1.2/src" 

}

